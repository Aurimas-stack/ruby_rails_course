<h1>Friends</h1>

<div class="search-area">
    <h3>Search Friends</h3>
    <%= form_tag search_friends_path, remote: true, method: :get do  %>
        <div class="form-group row align-items-center">
            <div class="col-sm-9">
                <%= text_field_tag :friend, params[:friend], placeholder: "Stock ticker symbol", autofocus: true, class: "form-control form-control-lg" %>
            </div>
            <div class="col-sm-3">
                <%= button_tag type: :submit, class: "btn btn-success" do %>
                    <%= "Search" %>
                <% end %>
            </div>
        </div>
    <% end %>
</div>

<% if !friends.empty? %>
    <%= render "friends/list" %>
<% end %>