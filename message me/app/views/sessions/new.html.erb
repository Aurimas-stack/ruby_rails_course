<div class="d-flex flex-column justify-content-center align-items-center">
    <h1 class="text-primary">Welcome to MessageMe - a complete Chat app</h1>
    <h4>Login to continue</h4>
</div>

<div class="container mt-5">
    <div class="row">
        <div class="col-5 card shadow-sm p-3 mb-5 bg-body rounded box-pad d-flex align-items-center justify-content-center">
            <%= form_for(:session, html: {role: "form"}, url: login_path) do |f| %>
                <div class="mb-3">
                    <%= f.label :username, "Username", class:"form-label" %>
                    <%= f.text_field :username, placeholder: "Username", class: "form-control" %>
                </div>
                <div class="mb-3">
                    <%= f.label :password, "Password", class:"form-label" %>
                    <%= f.password_field :password, placeholder: "Password", class: "form-control" %>
                </div>
                <%= f.button "Login", class: "btn btn-primary" %>
            <% end %>
        </div>
        <div class="col-2 box-pad d-flex align-items-center justify-content-center">OR</div>
        <div class="col-5 card shadow-sm p-3 mb-5 bg-body rounded box-pad d-flex align-items-center justify-content-center">
            <button class="btn btn-warning p-3">Sign up</button>      
        </div>
    </div>
    
</div>
